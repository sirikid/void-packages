# Template file for 'pantomime'
pkgname=pantomime
version=1.3.0
revision=1
wrksrc="Pantomime-${version}"
build_style=gnu-makefile
hostmakedepends="gnustep-make tar"
makedepends="gnustep-base-devel"
short_desc="Email client for GNUstep (MIME support library)"
maintainer="Ivan Sokolov <ivan-p-sokolov@ya.ru>"
license="GPL-3.0-or-later"
homepage="https://www.nongnu.org/gnustep-nonfsf/gnumail/index.html"
distfiles="${NONGNU_SITE}/gnustep-nonfsf/Pantomime-${version}.tar.gz"
checksum=935845b67ec4cf32596828091dc41f3599ca8870ab9085891c365be23094b910

pantomime-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove "usr/lib/*.so"
		vmove usr/include
	}
}
