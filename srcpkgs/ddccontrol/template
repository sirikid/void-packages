pre_configure() {
	./autogen.sh
}

libddccontrol_package() {
	short_desc+=" - shared library"
	pkg_install() {
		vmove usr/lib/*.so
	}
}

libddccontrol-devel_package() {
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/lib/*.a
		vmove usr/lib/pkgconfig
		vmove usr/include
	}
}
