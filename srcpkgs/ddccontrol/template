version=0.4.4
revision=1
archs="i686* x86_64*"
build_style=gnu-configure
hostmakedepends="autoconf automake gettext-devel intltool libtool pkg-config tar"
makedepends="gtk+-devel i2c-tools-devel libxml2-devel pciutils-devel"
depends="ddccontrol-db"
short_desc="Software to control monitor - brightness, contrast, RGB color levels"
